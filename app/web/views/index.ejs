<style>
    .container-full{
        background-image: url(/images/<%- test.background %>);
    }
</style>
<div class="container-full">
	<div class="gradient"></div>
	
	<div class="row" itemscope itemtype="http://schema.org/Product">
		
		<div id="itemscope">
			<span itemprop="name">Cron As A Service</span>

			<div itemprop="offers" itemscope itemtype="http://schema.org/Offer">
				<span itemprop="price">$9.99</span>
				<link itemprop="availability" href="http://schema.org/InStock" />In stock
			</div>
		</div>

		<div class="col-lg-12 text-center v-center">
			<h1>
				<a itemprop="url" href="/"><img src="images/logo.png" alt="Cron As A Service"></a>
			   	<span itemprop="description"><%- test.title %></span>
			</h1>
			
			<p class="lead">Sign up for your unlimited <span class="green">free</span> trial. No Credit Card required.</p>
			
			<%if (locals.errors) { %>
				<div class="alert alert-danger" role="alert">
				  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
				  <span class="sr-only">Error:</span>
				  	<% errors.forEach(function(error){%>
					   <%= error.msg %>
					<% }); %>
				</div>
			<%} %>
			
			<form action="/register" method="post" class="col-lg-12">
				<div class="input-group">
					<input class="form-control input-lg" title="Don't worry. We hate spam, and will not share your email with anyone." placeholder="Enter your email address" type="email" name="email" required>

				  <span class="input-group-btn"><button class="btn btn-lg btn-primary" type="submit">OK</button></span>
				</div>
			</form>
		</div>

	  </div> <!-- /row -->
	
	<div class="row">

		<div class="col-lg-12 text-center v-center example">
			<h3>
				Get starting in 29 seconds
			</h3>
            <img src="/images/laptop_cron.png" class="img-responsive center-block" alt="Cron As A Service">
			<br/>
			<span>
				 We've processed <span class="counter" data-count="31017">30000</span> api calls and counting. Leaving you free to build your app.
			</span>
		</div>

	  </div>
	
	<div class="row">
		<div class="col-lg-12 text-center v-center">
			<form action="/register" method="post" class="col-lg-12">
				<div class="input-group">
					<input class="form-control input-lg" title="Don't worry. We hate spam, and will not share your email with anyone." placeholder="Enter your email address" type="email" name="email" required>

				  <span class="input-group-btn"><button class="btn btn-lg btn-primary" type="submit">OK</button></span>
				</div>
			</form>
		</div>
	</div>

	  <div class="row">

		<div class="col-lg-12 text-center v-center" style="font-size:39pt;">
			<a href="https://twitter.com/cronasaservice"><i class="icon-twitter"></i></a> 
			<a href="https://github.com/drei01/cron-as-a-service"><i class="icon-github"></i></a>
		</div>

	  </div>

</div> <!-- /container full -->
<script src="/scripts/jquery.min.js"></script>
<script>
    $(document).ready(function(){
    $('.counter').each(function() {
				  var $this = $(this),
					  countTo = $this.attr('data-count');

				  $({ countNum: $this.text()}).animate({
					countNum: countTo
				  },
				  {
					duration: 8000,
					easing:'linear',
					step: function() {
					  $this.text(Math.floor(this.countNum).toLocaleString());
					},
					complete: function() {
					  $this.text(Math.floor(this.countNum).toLocaleString());
					}
				  });  
				});
    });
</script>