<script>
	$script('/scripts/jquery.min.js', function(){
		$script('/scripts/typed.custom.js', function(){
			$(function() {
			  var data = [
				  { 
					action: 'type',
					strings: ["curl -d 'expression=0 * * * *&url=http://myapp.com' http://cronasaservice.com/api/jobs"],
					output: '<span class="gray">{"method":"get",\n\r"url":"http://yourapp",\n\r"expression":"0 * * * *",\n\r"responses":[]}</span><br>&nbsp;Sign up for your unlimited free trial now.',
					postDelay: 1000
				  }

				];
			  	
				runScripts(data, 0);
				
				$('.counter').each(function() {
				  var $this = $(this),
					  countTo = $this.attr('data-count');

				  $({ countNum: $this.text()}).animate({
					countNum: countTo
				  },
				  {
					duration: 8000,
					easing:'linear',
					step: function() {
					  $this.text(Math.floor(this.countNum).toLocaleString());
					},
					complete: function() {
					  $this.text(Math.floor(this.countNum).toLocaleString());
					}
				  });  
				});
			});

			function runScripts(data, pos) {
				var prompt = $('.prompt'),
					script = data[pos];
				if(script.clear === true) {
				  $('.history').html(''); 
				}
				switch(script.action) {
					case 'type':
					  // cleanup for next execution
					  prompt.removeData();
					  $('.typed-cursor').text('');
					  prompt.typed({
						strings: script.strings,
						typeSpeed: 30,
						callback: function() {
						  var history = $('.history').html();
						  history = history ? [history] : [];
						  //history.push('$ ' + prompt.text());
						  if(script.output) {
							history.push(script.output);
							prompt.html('');
							$('.history').html(history.join('<br>'));
						  }
						  //hide the cursor
                          $('.typed-cursor').hide();
						}
					  });
					  break;
					case 'view':

					  break;
				}
			}
		});
	});
</script>